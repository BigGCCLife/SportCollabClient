<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
    <!-- Gold Medal -->
    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView4_container"
        app:layout_constraintTop_toBottomOf="@+id/button_container">

        <!-- Background (scaled down ~4x relative to medal) -->
        <ImageView
            android:id="@+id/bg_gold"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/button_bg" />

        <!-- Medal vector on top -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="79dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:src="@drawable/medal_gold" />
    </FrameLayout>

    <!-- Silver Medal -->
    <FrameLayout
        android:id="@+id/imageView4_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/button_container"
        app:layout_constraintTop_toBottomOf="@+id/button_container">

        <!-- Background (scaled down ~4x) -->
        <ImageView
            android:id="@+id/bg_silver"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/button_bg" />

        <!-- Medal vector -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="86dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:src="@drawable/medal_silver" />
    </FrameLayout>

    <!-- Bronze Medal -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/imageView4_container"
        app:layout_constraintTop_toBottomOf="@+id/button_container">

        <!-- Background (scaled down ~4x) -->
        <ImageView
            android:id="@+id/bg_bronze"
            android:layout_width="274dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/button_bg_long" />

        <!-- Medal vector -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="83dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/medal_bronze" />
    </FrameLayout>


    <ImageView
        android:id="@+id/upper_bg"
        android:layout_width="479dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_full_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Александр Ширунов"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="\@misssniper"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_full_name2" />


    <TextView
        android:id="@+id/text_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="16dp"
        android:gravity="start"
        android:text="Активный участник и организатор спортивных мероприятий. Люблю командные игры, особенно футбол и волейбол. Часто собираю людей на пробежки и тренировки на открытом воздухе. Открыт для новых знакомств и спортивных вызовов!\n\nЛюбимые виды спорта: футбол, волейбол, бег\n\nДоступен в: будни после 18:00, выходные — весь день\nЦель: поддерживать форму, находить единомышленников и просто хорошо проводить время на свежем воздухе"
        android:textAlignment="viewStart"
        android:textColor="#444444"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper_bg" />

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="248dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper_bg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/button_med" />

        <TextView
            android:id="@+id/button_text"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Редактировать"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/imageView4_container" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageView4_container"
        app:layout_constraintTop_toBottomOf="@+id/imageView4_container" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout2"
        app:layout_constraintTop_toTopOf="@+id/imageView4_container" />

</androidx.constraintlayout.widget.ConstraintLayout>